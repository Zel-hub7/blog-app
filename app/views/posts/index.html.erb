<h2><%= @user.name %></h2>
<h6>Number of posts: <%= @user.posts_counter %></h6>

<h2>Bio</h2>
<p><%= @user.bio %></p>

<% @posts.order(:id).each_with_index do |post, index| %>
  <div class="post">
    <h2>Post #<%= index + 1 %></h2>
    <p><%= post.text %></p>
 

    <% post.comments.each do |comment| %>
      <p><strong><%= comment.user.name %>:</strong> <%= comment.text %></p>
    <% end %>

    <p>Likes: <%= post.likes_counter %></p>
  </div>
<% end %>
<button>Pagination</button>
