<!DOCTYPE html>
<html>
<head>
  <title>Routes List</title>
</head>
<body>
  <div class="section">
    <% @users.each do |user| %>
      <%= link_to user_path(user) do %>
        <img src="<%= user.photo %>" alt="User Photo">
        <h2><%= user.name %></h2>
        <h6>Number of posts <%= user.posts_counter %></h6>
      <% end %>
    <% end %>
  </div>
</body>
</html>
